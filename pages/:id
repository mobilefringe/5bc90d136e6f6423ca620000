<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var banner_repo = getRepoDetailsByName("Pages Banner");
            if (banner_repo) {
                var banner_image = banner_repo.images[0].image_url;
                if (banner_image) {
                    $(".inside_banner").css({ "background": "linear-gradient(0deg, rgba(0,0,0,0.4), rgba(0,0,0,0.2)), url(" + banner_image + ") center center" });
                }
            }
            
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var pages_json = prefix + "/pages/" + slug + ".json"
            $.getJSON(pages_json).done(function(data) {
                if(Cookies.get('current_locale') == "en-CA"){
                    $('#mm_page_title').html(data.title.toUpperCase());
                    $('#mm_page_content').html(data.body);
                }
                if(Cookies.get('current_locale') == "fr-CA"){
                    $('#mm_page_title').html(data.title_2.toUpperCase());
                    $('#mm_page_content').html(data.body_2);
                }
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            
            // check if top header should be shown 
            if(slug == 'quinte-wifi'){
                $("#wifi").show();
            } else if (slug == 'quinte-covid-19-update') {
                $("#full_banner").hide();
                $("#extra_padding").show();
            } else if (slug == 'quinte-tourism'){
                $("#tourism").show();
            } else if (slug == 'quinte-military-discount-program'){
                $("#military").show();
            } else if (slug == 'quinte-charities-non-profit-group'){
                $("#charity").show();
            } 
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    })
</script>